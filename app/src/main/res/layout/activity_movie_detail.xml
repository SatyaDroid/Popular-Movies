<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.popularmovies.MovieDetailActivity">

    <include
        layout="@layout/action_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/movie_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/margin_short"
                    android:text="sduhf"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/margin_short" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/release_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_short"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/release_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/extra_short"
                            android:layout_marginRight="@dimen/extra_short"
                            android:text="@string/release_label_text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_release_text"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rating_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_short"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/extra_short"
                            android:layout_marginRight="@dimen/extra_short"
                            android:text="@string/rating_label_text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_rating_text"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:text="@string/rating_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/popularity_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_short"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/popularity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/extra_short"
                            android:layout_marginRight="@dimen/extra_short"
                            android:text="@string/popularity_label_text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_popularity_text"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vote_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_short"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vote_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/extra_short"
                            android:layout_marginRight="@dimen/extra_short"
                            android:text="@string/vote_label_text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_vote_text"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/language_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_short"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/language_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/extra_short"
                            android:layout_marginRight="@dimen/extra_short"
                            android:text="@string/language_label_text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_language_text"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/movie_certificate"
                        android:textStyle="bold"
                        android:textColorHighlight="@color/black"
                        android:layout_margin="@dimen/margin_short"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin_short"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/overview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overview_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movie_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
